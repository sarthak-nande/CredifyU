{
  "name": "credifyu-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:pwa": "vite build && npm run sw:generate",
    "sw:generate": "workbox generateSW workbox-config.js",
    "twa:install-cli": "npm install -g @bubblewrap/cli",
    "twa:init": "cd ../twa && npx @bubblewrap/cli init --manifest=twa-manifest.json",
    "twa:build": "cd ../twa && npx @bubblewrap/cli build",
    "twa:build:prod": "cd ../twa && npx @bubblewrap/cli build --signingKeyPath=./credifyu-release-key.keystore --signingKeyAlias=credifyu-key",
    "twa:install": "cd ../twa && npx @bubblewrap/cli install",
    "twa:setup": "npm run twa:init && npm run twa:build && npm run twa:install"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "@yudiel/react-qr-scanner": "^2.3.1",
    "axios": "^1.11.0",
    "bubblewrap": "^0.2.0",
    "checkbox": "^0.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "html5-qrcode": "^2.3.8",
    "jose": "^6.0.12",
    "lucide-react": "^0.528.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.4",
    "next-themes": "^0.4.6",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "vite-plugin-pwa": "^1.0.1"
  },
